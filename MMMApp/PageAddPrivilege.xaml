<Page x:Class="MMMApp.PageAddPrivilege"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MMMApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавление прав пользователю">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Добавление прав пользователю" FontSize="20" FontWeight="Bold" Margin="0,0,0,12" Grid.Row="0"/>

        <Label Content="Пользователь:" Grid.Row="1"/>
        <TextBox x:Name="txtUser" Grid.Row="1" Width="200" Margin="150,0,0,10"/>

        <Label Content="Тип привилегии:" Grid.Row="2"/>
        <ComboBox x:Name="cmbPriv" Grid.Row="2" Width="200" Margin="150,0,0,10">
            <ComboBoxItem Content="SELECT"/>
            <ComboBoxItem Content="INSERT"/>
            <ComboBoxItem Content="UPDATE"/>
            <ComboBoxItem Content="DELETE"/>
        </ComboBox>

        <Label Content="Таблица:" Grid.Row="3"/>
        <ComboBox x:Name="cmbTable" Grid.Row="3" Width="200" Margin="150,0,0,10">
            <ComboBoxItem Content="модель"/>
            <ComboBoxItem Content="магазин"/>
            <ComboBoxItem Content="готовая_продукция"/>
            <ComboBoxItem Content="заказ"/>
            <ComboBoxItem Content="состав_заказа"/>
        </ComboBox>

        <Button Grid.Row="4" Width="200" Height="35"
                Content="Назначить привилегию"
                Click="BtnApply_Click"/>
    </Grid>
</Page>
