<Page x:Class="MMMApp.PageBackup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MMMApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageBackup">

    <ScrollViewer>
        <StackPanel Margin="20" Width="700">
            <TextBlock Text="Резервное копирование БД MMM" FontSize="20" FontWeight="Bold" Margin="0,0,0,12"/>

            <StackPanel Orientation="Horizontal" Margin="0,6">
                <TextBlock Text="Тип бэкапа:" VerticalAlignment="Center" Width="120"/>
                <ComboBox Name="cmbType" Width="200">
                    <ComboBoxItem Content="Full" IsSelected="True"/>
                    <ComboBoxItem Content="Differential"/>
                    <ComboBoxItem Content="Log"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,6">
                <TextBlock Text="Путь к файлу:" VerticalAlignment="Center" Width="120"/>
                <TextBox Name="txtPath" Width="420" Text="D:\Backup\MMM_FULL.BAK"/>
                <Button Content="Обзор..." Margin="6,0,0,0" Click="BtnBrowse_Click" Width="80"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,12">
                <Button Name="btnBackup" Width="160" Height="34" Click="BtnBackup_Click">Выполнить бэкап</Button>
                <Button Name="btnCheckRecovery" Width="220" Height="34" Margin="10,0,0,0" Click="BtnCheckRecovery_Click">Проверить/Поставить RECOVERY = FULL</Button>
            </StackPanel>

            <TextBox Name="txtLog" Margin="0,12,0,0" Height="220" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>
        </StackPanel>
    </ScrollViewer>
</Page>
